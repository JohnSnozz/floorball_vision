# ==============================================
# FLOORBALL VISION - Environment Variables
# ==============================================
# Kopiere diese Datei nach .env und passe die Werte an:
#   cp .env.example .env
# ==============================================

# --------------------------------------------
# DATENBANK
# --------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=floorball_vision
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# SQLAlchemy Connection String
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# --------------------------------------------
# REDIS / CELERY
# --------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

# Celery Broker und Backend
CELERY_BROKER_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0
CELERY_RESULT_BACKEND=redis://${REDIS_HOST}:${REDIS_PORT}/1

# --------------------------------------------
# LABEL STUDIO
# --------------------------------------------
LABEL_STUDIO_URL=http://localhost:8080
LABEL_STUDIO_API_KEY=your_api_key_here

# --------------------------------------------
# FLASK
# --------------------------------------------
FLASK_APP=src.web.app:create_app
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=change_this_to_a_random_string_in_production

# --------------------------------------------
# PFADE
# --------------------------------------------
# Basis-Pfad für Daten (Videos, Frames, etc.)
DATA_PATH=./data

# Pfad für ML Modelle
MODELS_PATH=./models

# --------------------------------------------
# YOLO / TRAINING
# --------------------------------------------
# Standard YOLO Modell für neue Projekte
YOLO_BASE_MODEL=yolov8n.pt

# GPU Nutzung (0 = erste GPU, -1 = CPU)
YOLO_DEVICE=0

